@book{amorosoRegionPatagonicaBosques2021,
  title = {Región Patagónica (Bosques Andino Patagónicos)},
  author = {Amoroso, Mariano Martin and Peri, Pablo Luis and Lencinas, María Vanessa and Soler Esteban, Rosina Matilde and Rovere, Adriana and González Peñalba, M. and Chauchards, Luis Mario and Urretavizcaya, María Florencia and Loguercio, Gabriel Angel and Mundo, Ignacio Alberto and Cellini, Juan Manuel and Dezzotti, Alejandro and Attis Beltran, Hernan and Bahamonde, Héctor Alejandro and Ladio, Ana Haydee and Gowda, Juan Janakiram Haridas and Gallo, Leonardo and Quinteros, Claudia Pamela and Sola, Georgina Giselle and Martínez Pastur, Guillermo José},
